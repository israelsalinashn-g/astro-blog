---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Imágenes">
    <h1 class="text-5xl text-white">Imágenes</h1>
    <h1>Etiqueta h1</h1>
    <img src="/assets/images/post-05.png" width="250" height="250" alt="" />

    <h1>Image 250x250</h1>
    <Image src={post05Img} width="250" height="250" alt="post-05" />

    <h1>Image quality low - 250x250</h1>
    <Image
        quality="low"
        src={post05Img}
        width="250"
        height="250"
        alt="post-05"
    />

    <h1>Image formatos - 250x250</h1>
    <Image
        format="jpg"
        src={post05Img}
        width="250"
        height="250"
        alt="post-05"
    />

    <h1>Picture formats - 250x250</h1>
    <Picture
        formats={["png", "jpeg", "webp"]}
        src={post05Img}
        width="250"
        height="250"
        alt="post-05"
    />

    <h1>Picture densities - 250x250</h1>
    <Picture
        width={post05Img.width / 2}
        densities={[1.5, 2]}
        src={post05Img}
        width="250"
        height="250"
        alt="post-05"
    />

    <h1>Picture sizes - 250x250</h1>
    <Picture
        widths={[240, 540, 720, post05Img.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
        src={post05Img}
        width="250"
        height="250"
        alt="post-05"
    />
</MainLayout>

<style>
    h1 {
        @apply text-white mt-10;
    }
</style>
